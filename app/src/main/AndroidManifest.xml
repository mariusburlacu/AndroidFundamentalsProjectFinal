<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.androidfundamentalsproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_travel_journal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_travel_journal_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidFundamentalsProject">
        <activity android:name=".TripReadOnly"></activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavouriteTrips"
            android:label="@string/favorite" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/sign_up" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:theme="@style/Theme.AndroidFundamentalsProject"></activity>
        <activity android:name=".AddTrip" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidFundamentalsProject.NoActionBar"></activity>
    </application>

</manifest>